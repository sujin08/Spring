<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="kr.ac.hit.myapp.product.ProductDao">
    <insert id="insert" parameterType="ProductDao">
        INSERT INTO product(prod_name, prod_price) VALUES (#{prodName}, #{prodPrice})
    </insert>
    <select id="selectList" resultType="ProductDao">
        select prod_name, prod_price from product
    </select>
    <select id="select" parameterType="int" resultType="ProductDao">
         select prod_name, prod_price from product where prod_no = #{prodNo}
    </select>
    <update id="update" parameterType="ProductDao">
        update product set prod_name = #{prodName},prod_price = #{prodPrice} where prod_no = #{prodNo}
    </update>
    <delete id="delete" parameterType="int">
        delete from product where prod_no = #{prodNo}
    </delete>
</mapper>